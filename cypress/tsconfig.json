{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom"],

    // type checking
    "types": ["cypress", "@types/node"],

    // module resolution
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "jsx": "react",

    // paths
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "../src/*"
      ]
    },
  },
  "include": ["**/*.ts", "**/*.tsx"]
}