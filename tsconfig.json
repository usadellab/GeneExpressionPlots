{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "noEmit": true,

    // type checking
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "skipLibCheck": false,
    "strict": true,
    "types": ["vite/client"],

    // module resolution
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    "isolatedModules": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,

    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["./dist"]
}
